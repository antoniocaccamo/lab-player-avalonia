    <!--     </TrayIcons> -->
    <!-- </TrayIcon.Icons> -->

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File" IsVisible="true">
                <NativeMenu>
                    <NativeMenuItem Header="Close" Click="FileClose_OnClick" Gesture="Meta+C" />
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <Grid RowDefinitions="Auto, *">

        <TextBlock Grid.Row="0" Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <TabControl Grid.Row="1" ItemsSource="{Binding ScreenViewModels }">
            <TabControl.ItemTemplate>
                <DataTemplate x:DataType="vm:ScreenViewModel">
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate x:DataType="vm:ScreenViewModel">
                    <views:ScreenSetting DataContext="{Binding}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        
