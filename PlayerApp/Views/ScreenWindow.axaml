<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PlayerApp.Views"
        xmlns:vm="using:PlayerApp.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PlayerApp.Views.ScreenWindow"
        x:DataType="vm:ScreenSettingViewModel"
        Title="{Binding Title}"
        SystemDecorations="None"
        Icon="/Assets/avalonia-logo.ico">
    
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:ScreenSettingViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto, *">

        <TextBlock Grid.Row="0" Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <TransitioningContentControl Grid.Row="1" 
                                     Content="{Binding CurrentPlayer}">
            
            
            
        </TransitioningContentControl>

        <!-- <views:VideoPlayer Grid.Row="1" DataContext="{Binding VideoPlayerViewModel}"/> -->
   
    </Grid>
</Window>
